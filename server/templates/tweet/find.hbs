<div class="actions">
  <a class="btn btn-primary" href="/tweet/random">Selecionar um aleat√≥rio</a>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>User</th>
      <th>text</th>
      <th>{{t 'actions'}}</th>
    </tr>
  </thead>
  <tbody>

{{#each data}}
  <tr>
    <td>{{id}}</td>
    <td>
      <a href="https://twitter.com/{{userName}}" target="_blank">
        <img src="{{userImage}}" alt="Imagem do {{userDisplayName}}">
        {{userDisplayName}}
      </a>
    </td>
    <td>{{text}}</td>
    <td>
      {{we-action-view-btn ../resourceName this ../req id}}
      {{we-action-edit-btn ../resourceName this ../req id}}
      {{we-action-delete-btn ../resourceName this ../req id}}
    </td>
  </tr>
{{/each}}

  </tbody>
  <tfoot>
    <td colspan="2">
      {{paginate count=metadata.count limit=query.limit currentPage=query.page req=req}}
    </td>
  </tfoot>
</table>
